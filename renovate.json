{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:daily"
  ],
  "labels": [
    "chore"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchFileNames": [
        ".github/**"
      ],
      "enabled": true,
      "groupName": "github-actions"
    }
  ]
}
